{
  "manifest_version": 3,
  "name": "GitHub Actions Copy Log",
  "version": "0.3.0",
  "description": "Copy GitHub Actions step logs to clipboard with a single click",
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/actions/runs/*/job/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}