{
  "manifest_version": 3,
  "name": "GitHub Actions Copy Log",
  "version": "1.0.0",
  "description": "各ステップのフルログをワンクリックでクリップボードにコピーします",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/actions/runs/*/jobs/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}